{
  "name": "@nuxtjs/ionic",
  "version": "0.13.1",
  "license": "MIT",
  "repository": "nuxt-modules/ionic",
  "description": "Ionic integration for Nuxt",
  "keywords": [
    "nuxt",
    "module",
    "nuxt-module",
    "ionic",
    "ionic-framework",
    "web-components",
    "native",
    "android",
    "ios"
  ],
  "author": {
    "name": "Daniel Roe <daniel@roe.dev>",
    "url": "https://github.com/danielroe"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types.d.ts",
      "import": "./dist/module.mjs",
      "require": "./dist/module.cjs"
    }
  },
  "main": "./dist/module.cjs",
  "types": "./dist/types.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm dev:prepare && nuxt-module-build build",
    "dev": "nuxi dev playground",
    "dev:build": "nuxi build playground",
    "dev:prepare": "pnpm nuxt-module-build build --stub && nuxt-module-build prepare && nuxi prepare playground",
    "docs:dev": "nuxi dev docs",
    "docs:build": "nuxi build docs",
    "lint": "pnpm lint:all:eslint && pnpm lint:all:prettier",
    "lint:all:eslint": "pnpm lint:eslint .",
    "lint:all:prettier": "pnpm lint:prettier \"{src,test}/**/*.{js,json,ts}\"",
    "lint:eslint": "eslint --fix",
    "lint:prettier": "prettier --write --loglevel warn",
    "prepack": "pnpm build",
    "prepare": "husky install",
    "prepublishOnly": "pnpm lint && pnpm test && pinst --disable",
    "release": "bumpp && npm publish && git push --follow-tags",
    "test": "vitest run",
    "test:types": "tsc --noEmit",
    "postinstall": "husky install",
    "postpublish": "pinst --enable"
  },
  "dependencies": {
    "@capacitor/cli": "^5.6.0",
    "@capacitor/core": "^5.6.0",
    "@ionic/cli": "^7.2.0",
    "@ionic/vue": "^7.6.3",
    "@ionic/vue-router": "^7.6.3",
    "@kevinmarrec/nuxt-pwa": "^0.17.0",
    "@nuxt/kit": "^3.9.1",
    "ionicons": "^7.2.2",
    "pathe": "^1.1.1",
    "pkg-types": "^1.0.3",
    "ufo": "^1.3.2",
    "unimport": "^3.7.1"
  },
  "devDependencies": {
    "@nuxt/eslint-config": "0.3.5",
    "@nuxt/module-builder": "0.5.5",
    "@nuxt/schema": "3.9.1",
    "@nuxt/test-utils": "3.9.0",
    "@types/node": "20.11.30",
    "@vitest/coverage-v8": "1.1.3",
    "bumpp": "9.4.0",
    "eslint": "9.0.0",
    "expect-type": "0.17.3",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "nuxt": "3.9.1",
    "pinst": "3.0.0",
    "playwright": "1.40.1",
    "prettier": "3.2.5",
    "typescript": "5.3.3",
    "vitest": "1.1.3",
    "vue": "3.4.7",
    "vue-tsc": "1.8.27"
  },
  "resolutions": {
    "@nuxt/kit": "3.9.1",
    "@nuxt/schema": "3.9.1",
    "@nuxtjs/ionic": "link:.",
    "consola": "^3.2.3"
  },
  "packageManager": "pnpm@8.14.1"
}